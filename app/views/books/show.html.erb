<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3">
            <h2>User info</h2>
            <p>プロフ画像</p>
                <table clas="table">
                    <tbody>
                        <tr>
                            <th>name</th>
                            <th>ユーザーの名前</th>
                        </tr>
                        <tr>
                            <th>introduction</th>
                            <th></th>
                        </tr>
                    </tbody>
                </table>
            <div clas="row">
                <a class="btn btn-outline-secondary btn-block" href="edit_users_path" role="button"><i class="fas fa-users-cog"></i></a>
                <h2 class="mt-3">New book</h2>
                <%= form_with model: @book, local:true do |f| %>
                    <div>
                    <%= f.label :title %>
                    <%= f.text_field :title %>
                    </div>
                    <div>
                    <%= f.label :opinion %>
                    <%= f.text_area :body %>
                    </div>
                    <%= f.submit 'Create book' ,class: "btn btn-success" %>
                <% end %>
            </div>
        </div>
        <div class="col-md-8 offset-md-1">
            <h2><storng>Books</storng></h2>
            <table>
                <thead>
                    <tr>
                        <th></th>
                        <th>Title</th>
                        <th>Opinion</th>
                        <th colspan="3"></th>
                    </tr>
                </thead>
                <tbody>
                    <th>投稿内容</th>
                </tbody>
                
            </table>
        </div>
    </div>
</div>

