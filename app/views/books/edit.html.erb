<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>
      <%= form_with model: @book, local:true do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>
        <p>Opinion</p>
        <%= f.text_area :body %>
        <%= f.submit 'Updeate Book' ,class: "btn btn-success" %>
      <% end %>
      <%= link_to "show", book_path(@book.id) do %>
      <%= link_to "Back", books_path(@book.id) do %>
    </div>
  </div>
</div>






