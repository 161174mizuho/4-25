<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user, local:true do |f| %>
        <h5>Name</h5>
        <%= f.text_field :name %>
        <h5>Image</h5>
        <%= f.file_field :image, accept: "image/*" %>
        <h5>Introduction</h5>
        <%= f.text_area :body %>
        <%= f.submit 'Updeate User' ,class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
