<div class="container">
  <%= form_with model: @user, local:true do |f| %>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <h4>Name</h4>
      <%= f.text_field :name %>
      <h4>image</h4>
      <%= f.file_field :image, accept: "image/*" %>
      <h4>Opinion</h4>
      <%= f.text_area :body %>
      <%= f.submit 'Updeate User' ,class: "btn btn-success" %>
    </div>
  </div>
  <% end %>
</div>
