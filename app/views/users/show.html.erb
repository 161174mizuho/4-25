<%= render "books/list", book: @book, user: @user%>

<div class="col-md-8 offset-md-1">
        <h2><storng>Books</storng></h2>
        <table>
            <thead>
                <tr>
                    <th></th>
                    <th>Title</th>
                    <th>Opinion</th>
                    <th colspan="3"></th>
                </tr>
            </thead>
            <tbody>
                <th>                  
                <% @books.each do |book| %>
                    <tr>
                        <td>
                        <%= link_to user_path(book.user) do %>
                            <%= image_tag book.user.get_profile_image(100, 100) %>
                        <% end %>
                        </td>
                        <td>
                        <%= link_to book_path(book.user) do %>
                            <%= book.title %>
                        <% end %>
                        </td>
                        <td>
                            <%= book.body %>
                        </td>
                    </tr>
                <% end %>
            </th>
        </tbody>
        </table>
        </div>
    </div>
</div>

