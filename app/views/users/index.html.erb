    <%= render "books/list", book: @book, user: @user%>

        <div class="col-md-8 offset-md-1">
            <h2><storng>Users</storng></h2>
            <table>
                <thead>
                    <tr>
                        <th>image</th>
                        <th>name</th>
                        <th colspan="3"></th>
                    </tr>
                </thead>
                <tbody>
                  <% @users.each do |user| %>
                    <tr>
                      <td>
                        <%= link_to user_path(user.id) do%>
                          <%= image_tag user.get_profile_image(100, 100) %>
                        <% end %>
                      </td>
                      <td>
                          <%= user.name %>
                      </td>
                      <td>
                        <%= link_to "Show", user_path(user.id) %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>

